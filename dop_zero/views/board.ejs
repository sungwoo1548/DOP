    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        <div class="container" role="main">
            <form name="form" id="form" role="form" method="post">
                <div class="mb-3">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="제목을 입력해 주세요">
                </div>
            <form name="formManager" class="formManager">
            <fieldset>
                <legend>담당자정보</legend>
                <div class="form-group">
                    <label for="companyName">회사명</label>
                    <input type="text" class="form-control" id="companyName">
                </div>
                <!-- 주소 API 써야할 듯함 -->
                <div class="form-group">
                    <label for="companyAddress">회사 주소</label>
                    <input type="text" class="form-control" id="companyAddress">
                </div>
                <div class="form-group">
                    <label for="companyURL">회사 URL</label>
                    <input type="text" class="form-control" id="companyURL">
                </div>
                <div class="form-group">
                    <label for="managerName">담당자 이름</label>
                    <input type="text" class="form-control" id="managerName">
                </div>
                    <label for="managerEmail1">담당자 Email 주소</label>
                    <div class="form-row">
                        <div class="form-group col">
                            <input type="email" class="form-control" id="managerEmail1" placeholder="">
                        </div>
                        <div class="form-group col-auto">
                            @
                        </div>
                        <div class="form-group col">
                            <select class="form-control" id="managerEmail1">
                                <option value="">도메인 선택을 바랍니다. </option>
                                <option value="@naver.com">naver.com</option>
                                <option value="@hanmail.net">hanmail.net</option>
                                <option value="@nate.com">nate.com</option>
                                <option value="@daum.net">daum.net</option>
                                <option value="@hotmail.com">hotmail.com</option>
                                <option value="@dreamwiz.com">dreamwiz.com</option>
                                <option value="@gmail.com">gmail.com</option>
                            </select>
                        </div>
                    </div>
                </fieldset>
                </form>

                <div class="mb-3">
                    <label for="mission_condition">미션조건</label>
                    <input type="text" class="form-control" name="missionCondition" id="missionCondition" placeholder="미션조건을 입력해 주세요">
                </div>
        
                <div class="mb-3">
                    <label for="mission_user_num">참가자수</label>
                    <input type="text" class="form-control" name="missionUserNum" id="missionUserNum" placeholder="미션 참가자 수를 입력해주세요">
                </div>

                <div class="mb-3">
                    <label for="content">광고 상세내용</label><br>
                    <textarea class="form-control" rows="30" name="content" id="content" placeholder="광고 상세내용을 입력해 주세요" ></textarea>
                </div>
        
                <div class="mb-3">
                    <label for="tag">상품</label>
                    <input type="text" class="form-control" name="tag" id="tag" placeholder="상품을 입력해 주세요">
                </div>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile02" accept="image/jpeg" multiple="multiple">
